generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String?
  email       String   @unique
  password    String
  role        String   @default("user")
  isAdmin     Boolean  @default(false)
  isSuspended Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  replays     Replay[]

  @@map("User")
}

model Replay {
  id        Int      @id @default(autoincrement())
  code      Int
  codeInt   Int      @unique
  replayId  Int      @unique
  title     String
  startTime DateTime
  endTime   DateTime
  notes     String?
  createdBy Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [createdBy], references: [id])
  prompts  Prompt[]
  recordings Recording[]
  usageRecords Usage[]
  promptOrder  String[] @default(["firstName", "lastName", "company", "phone"])

  @@map("Replay")
}

model Prompt {
  id        Int      @id @default(autoincrement())
  replayId  Int
  type      String
  audioUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  replay    Replay   @relation(fields: [replayId], references: [id])

  @@map("Prompt")
}

model Recording {
  id        Int      @id @default(autoincrement())
  replayId  Int
  label     String
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  replay    Replay   @relation(fields: [replayId], references: [id])

  @@map("Recording")
}

model Usage {
  id                    Int      @id @default(autoincrement())
  replayId              Int
  callerId              String
  durationSeconds       Int
  firstNameRecordingUrl String?
  lastNameRecordingUrl  String?
  companyRecordingUrl   String?
  phoneRecordingUrl     String?
  firstName             String?  
  lastName              String? 
  company               String?  
  phone                 String?  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  replay                Replay   @relation(fields: [replayId], references: [id])

  @@map("Usage")
}

